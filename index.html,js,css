    <script>
        // Language Toggle
        document.getElementById('language').addEventListener('change', function() {
            const lang = this.value;
            document.getElementById('search-title').textContent = lang === 'si' ? 'WhatsApp අංක සෙවීම' : 'Search WhatsApp Numbers';
            document.getElementById('message-title').textContent = lang === 'si' ? 'පණිවිඩ යැවීම' : 'Send Messages';
            document.getElementById('register-title').textContent = lang === 'si' ? 'ලියාපදිංචි වීම' : 'Registration';
            document.getElementById('payment-title').textContent = lang === 'si' ? 'ගෙවීම්' : 'Payments';
            document.getElementById('premium-title').textContent = lang === 'si' ? 'Premium ගිණුම්' : 'Premium Plans';
            document.getElementById('integration-title').textContent = lang === 'si' ? 'WhatsApp ඒකාබද්ධ කිරීම' : 'WhatsApp Integration';
        });

        // WhatsApp API Integration (Simplified Simulation)
        document.getElementById('integrate-btn').addEventListener('click', async () => {
            alert('WhatsApp ඒකාබද්ධ කිරීම ආරම්භ විය. Meta Developer API හරහා ස්වයංක්‍රීයව ඒකාබද්ධ වේ.');
            // Simulate Meta API call (replace with actual Meta API integration)
            // Example: fetch('https://graph.facebook.com/v13.0/...').then(...)
        });

        // Search WhatsApp Numbers
        document.getElementById('search-btn').addEventListener('click', () => {
            const phone = document.getElementById('phone-input').value;
            const resultsDiv = document.getElementById('search-results');
            resultsDiv.innerHTML = '';

            if (phone.length === 10) {
                resultsDiv.innerHTML = `<p>අංකය: ${phone} - ගිණුම: Sample User</p>`;
            } else if (phone.length > 0) {
                resultsDiv.innerHTML = `<p>ආසන්නතම අංක: ${phone}123 - ගිණුම: Sample User 1</p>
                                        <p>ආසන්නතම අංක: ${phone}456 - ගිණුම: Sample User 2</p>`;
            } else {
                resultsDiv.innerHTML = `<p>යෝජිත අංක: 0712345678 - ගිණුම: Sample User 1</p>
                                        <p>යෝජිත අංක: 0712345679 - ගිණුම: Sample User 2</p>`;
            }
        });

        // Send Message
        document.getElementById('send-btn').addEventListener('click', () => {
            const message = document.getElementById('message-input').value;
            alert(`පණිවිඩය යවන ලදි: ${message}`);
        });

        // Bulk Send
        document.getElementById('bulk-send-btn').addEventListener('click', () => {
            const message = document.getElementById('message-input').value;
            alert(`බල්ක් පණිවිඩ යවන ලදි: ${message}`);
        });

        // Payment Details
        document.getElementById('payment-details-btn').addEventListener('click', () => {
            document.getElementById('payment-details').classList.toggle('hidden');
        });

        // Upload Slip
        document.getElementById('upload-slip-btn').addEventListener('click', () => {
            const file = document.getElementById('payment-slip').files[0];
            if (file) {
                alert('ගෙවීම් ස්ලිප් උඩුගත කරන ලදි. තහවුරු කිරීමෙන් පසු ලියාපදිංචිය සම්පූර්ණ වේ.');
            } else {
                alert('කරුණාකර ගෙවීම් ස්ලිප් උඩුගත කරන්න.');
            }
        });

        // Registration
        document.getElementById('register-btn').addEventListener('click', () => {
            alert('ලියාපදිංචිය සම්පූර්ණයි! ගෙවීම් ස්ලිප් උඩුගත කරන්න.');
        });
    </script>
